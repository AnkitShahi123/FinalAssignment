<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bgone"
    android:layout_height="match_parent"
    tools:context="com.ankit.finalassignmentproject.RegisterActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:src="@drawable/color"
        android:text="REGISTER"
        android:textColor="@color/black"
        android:textSize="70dp"
        android:textStyle="bold" />
    <EditText
        android:id="@+id/etRegUser"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape"
        android:gravity="center"
        android:hint="Username" />


    <EditText
        android:id="@+id/etPasswd"
        android:layout_width="350dp"
        android:inputType="textPassword"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape"
        android:gravity="center"
        android:hint="Password" />

    <EditText
        android:id="@+id/etConfirmPasswd"
        android:layout_marginTop="10dp"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:inputType="textPassword"
        android:hint="Confirm Password"
        android:background="@drawable/shape"
        />
    <EditText
        android:id="@+id/etEmail"
        android:layout_marginTop="10dp"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:hint="Email Address"
        android:background="@drawable/shape"
        />
    <EditText
        android:id="@+id/etPhone"
        android:inputType="number"
        android:layout_marginTop="10dp"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:hint="Phone Number"
        android:background="@drawable/shape"
        />

<!--    <EditText-->
<!--        android:id="@+id/etAddress"-->
<!--        android:layout_marginTop="10dp"-->
<!--        android:layout_width="350dp"-->
<!--        android:layout_height="50dp"-->
<!--        android:layout_gravity="center"-->
<!--        android:gravity="center"-->
<!--        android:hint="Enter e-mail Address"-->
<!--        android:background="@drawable/shape"-->
<!--        />-->

    <Button
        android:id="@+id/btnRegister"
        android:text="Register Now"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:background="@drawable/layout"
        android:layout_width="200dp"
        app:backgroundTint="#c2ebf2"
        android:textColor="@color/lightblue"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_marginLeft="175dp"
            android:layout_marginTop="130dp"
            android:text="Already have an account? "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/goToLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="130dp"
            android:textStyle="bold"
            android:text="Login here " />


    </LinearLayout>



</LinearLayout>